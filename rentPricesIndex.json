{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  
  "title": {
      "text": "Rental Prices: UK regions",
      "subtitle":"Index of Private Housing Rental Prices. 2015=100. Source: ONS",
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "anchor": "start",
      "color": "black"
    },
  
    "description": "Private Housing Rental Prices: UK regions ",
    "data": {
      "url": "https://raw.githubusercontent.com/1920643/1920643.github.io/main/index-private-housing-rental-prices.csv",
      "format": {"type": "csv"}
    },
  
    "height": 300,
    
    "width": 430,
    
    "mark": {"type": "line"},
    
    "selection": {
      "Region": {
        "type": "single",
        "fields": ["Geography"],
        "bind": {
          "input": "select",
          "options": [
            null,
            "London",
            "East Midlands",
            "East of England",
            "North East",
            "North West",
            "South East",
            "South West",
            "West Midlands",
            "Yorkshire and The Humber"
          ],
          "name": "Pick a region: "
        }
      }
    },
    "transform": [
      
      {"filter": {"selection": "Region"}}
      
    ],
  
    "encoding": {
      "x": {
        "field": "Time", 
        "type": "temporal", 
        "title": null},
      "y": {
        "field": "v4_1",
        "type": "quantitative",
        "title": null,
        "scale":{"domain":[70,120]}
        
        },
      
        
      "color": {
        "field": "Geography",
        "type": "nominal",
        "legend": null,
        "scale": {"scheme": "inferno"}
      }
    }
  }
